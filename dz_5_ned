int str_cmp(char* a, char* b)
{
	int k = 1;
	for (int i = 0; a[i] != '\0' || b[i] != '\0'; ++i)
	{
		if (a[i] != b[i])
		{
			k = 0;
			break;
		}
	}
	return k;
}

